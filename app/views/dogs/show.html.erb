

<%= image_tag(@dog.pic, height: "150px", class: "style_image" ) %>
<div>
<ul>
<h1> <%= @dog.name %> </h1>
<li> <%= @dog.age %> years old</li>
<li> <%= @dog.breed %> </li>
</ul>

</div>

<h3>Home city: <%= @dog.city %></h3>
<h3>Weight: <%= @dog.weight %></h3>
<h3>Ever been aggressive? <%= @dog.aggressive %></h3>
<h3>Good with kids? <%= @dog.kids %></h3>
<h3>Update on shots? <%= @dog.shots %></h3>
<h3>Play style:  <%= @dog.playstyle %></h3>
<h3>Funny fact:  <%= @dog.funnyfact %></h3>
<h3>Additional info:  <%= @dog.info %></h3>
<h3>Friends:    </h3>



<%= form_for @dog do |f| %>
<%= f.submit "Play Now!", :class => 'play_button' %>

<% end %>
<br>



<%= link_to "Edit this dog", edit_dog_path(@dog) %>

<%= link_to "Delete this dog", :dog, method: :delete, data: { confirm: "Are you sure you want to delete this dog?" } %>

<%= link_to "Back to dog list", dogs_path %>