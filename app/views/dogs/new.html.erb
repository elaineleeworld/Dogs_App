<h1>Sign up your dog!</h1>

<p>Each pet you sign up should be associated with a different email</p>
<ul>
  <%= @dog.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
</ul>

<%= form_for @dog do |f| %>
  <div>
    <%= f.label :name, "Name of your Dog" %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>
  <div>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>
  <div>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
  </div>
  <div>
    <%= f.label :age %>
    <%= f.text_field :age %>
  </div>
  <div>
    <%= f.label :breed %>
    <%= f.text_field :breed %>
  </div>
  <div>
    <%= f.label :city, "Current City" %>
    <%= f.text_field :city %>
  </div>
  <div>
    <%= f.label :weight %>
    <%= f.text_field :weight %>
  </div>
 <div>
    <%= f.label :aggressive, "Aggressive?" %>
    <%= f.text_field :aggressive %>
  </div>
  <div>
    <%= f.label :kids ,"Good with Kids?" %>
    <%= f.text_field :kids %>
  </div>
  <div>
    <%= f.label :shots, "Current shots updated?" %>
    <%= f.text_field :shots %>
  </div>
  
  <div>
    <%= f.label :info, "When available:" %>
    <%= f.text_field :info %>
  </div>
  <div>
  <%= f.file_field :image %>

  <div>
    <%= f.submit 'Submit and check your new profile page!' %>
  </div>
<% end %>


