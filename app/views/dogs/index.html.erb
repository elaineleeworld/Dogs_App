<h1>Dogs Who Want to Play Now!</h1>

<% @dogs.each do |dog| %>
	<tr>
		<td><%= image_tag(dog.pic, height: "150px" )%></td>
  		<td><%= dog.name %> is <%= dog.age %> years old from  <%= dog.city %> and wants to play now!</td>
  		<td><%= link_to "Show" , dog %></td>
  		<td><%= link_to "Edit" , edit_dog_path(dog) %></td>
  		<td><%= link_to "Remove" , dog, method: :delete, data: {confirm: "Are you sure?" } %></td>
  	</tr>
   <br/>

<% end %>

<%= link_to "New dog", new_dog_path %>



